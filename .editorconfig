root = true
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{java,kt,gradle,gradle.kts}]
indent_size = 4
max_line_length = 120

[*.properties]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.{css,scss}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[*.sh]
indent_size = 2